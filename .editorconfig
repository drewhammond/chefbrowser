# https://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.go]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Go templates can have really long lines where spacing actually matters
# We'll eventually rewrite these so they can conform to our 120 char style
[*.html]
max_line_length = 9999

[*.{js,ts,tsx,scss}]
quote_type = single

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 2
